@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'

body
  background offwhite
  margin 0
  padding 0

.header-container
  background-color: #00be8f
  padding: 20px 10px
  display: flex
  align-items: center

.header-title
  margin 0
  color: white

.header-title-wrapper
  display flex
  align-items center

.header-logo
  width: 40px
  margin-right 10px

.search-form
  margin 0 auto
  margin-left 20px

.search-input
  border none
  width 500px
  height 40px
  padding 10px
  font-size 18px
  transition all 200ms
  border-radius 3px 0 0 3px
  color: gray
  border 1px solid white
  &:focus 
      outline none

.btn-search
  color gray
  background-color white
  border none
  border-left 1px solid #d6d6d6
  border-radius 0 3px 3px 0
  &:hover
    border-color transparent
    background-color lightgray
    outline 0
 &:focus
    border-color transparent
    background-color lightgray
    outline 0

// profile

.left-col
  width 25%
  border-right 2px solid #dedcdc
  padding-right 25px
  margin-top 50px

.profile-container
  display flex
  flex-direction column
  align-items center

.profile-image
  width 100px
  border-radius 50px

.profile-name
  font-size 24px
  font-weight bold
  color #292929
  margin 6px 0

.profile-about
  text-align center
  color #afb5b6
  margin 0

.profile-github
  font-size 18px
  text-decoration none
  color #00be8f
  border 2px solid #00be8f
  border-radius 3px
  width 72%
  text-align center
  margin-top 15px
  transition all 200ms
  padding 7px
  &:hover
    color white
    background-color #00be8f

.info-container
  display flex
  margin-top 30px
  justify-content space-around
  & > .info-statics ~ .info-statics
    border-left 2px solid #eaeaea

.info-statics 
  display flex
  flex-direction column
  align-items center
  padding 0 15px

.info-number
  font-size 25px
  color #2e2e2e

.info-sub 
  margin 0
  font-size 12px
  color #9d9e9e

.other-info
  margin-top 50px

.other-info-title
  font-weight bold
  color #313131

.other-info-item
  font-size 12px
  color #00be8f


// Reopositorios

.right-col
  margin-top 50px
  margin-left 30px
  &__title
    margin-left 10px
    color #292929

.repos-wrapper
  display flex
  flex-wrap wrap

.rep-container 
  margin: 10px
  padding: 10px
  border: 2px solid lightgrey
  min-width 200px

.rep-label
  font-size: 10px
  color: gray

.rep-name
  margin: 0
  color: #00be8f

  // LEGADO

.photo-grid
  display flex
  max-width 1200px
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 60%
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.grid-photo
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1
 
.comment-form 
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 10px
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
    background transparent


.grid-photo-wrap
  position relative
  
.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none
  

/*  
  Buttons  
*/

.control-buttons
  display flex
  justify-content space-between
    
button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  transition all 0.2s
  box-sizing padding-box

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size 
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0

  
  

